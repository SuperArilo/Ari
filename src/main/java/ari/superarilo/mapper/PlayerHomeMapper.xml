<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ari.superarilo.mapper.PlayerHomeMapper">
    <resultMap id="playerHome" type="ari.superarilo.entity.sql.PlayerHome">
        <id property="id" column="id" />
        <result property="homeId" column="home_id" />
        <result property="homeName" column="home_name" />
        <result property="playerUUID" column="player_uuid" />
        <result property="x" column="x" />
        <result property="y" column="y" />
        <result property="z" column="z" />
        <result property="serverName" column="server_name" />
        <result property="world" column="world" />
        <result property="showMaterial" column="show_material" />
    </resultMap>
    <select id="getHomeList" resultType="ari.superarilo.entity.sql.PlayerHome">
        select
          ph.id, ph.home_id, ph.home_name, ph.player_uuid, ph.x, ph.y, ph.z, ph.server_name, ph.world, ph.show_material
        from player_home as ph
        where ph.player_uuid = #{playerUUID} and ph.server_name = #{serverName}
    </select>
</mapper>